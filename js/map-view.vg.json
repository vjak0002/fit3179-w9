{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 700,
  "width": 1200,
  "title": "A simple world map with embedded data.",
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vjak0002/fit3179-w9/main/data/ne_10m_admin_0_countries.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "name": "happiness-index-countries-2019",
        "url": "https://raw.githubusercontent.com/vjak0002/fit3179-w9/main/data/countries-happiness-2019.csv"
      },
      "mark": {
        "type": "circle",
        "tooltip": {
          "content": "encoding"
        }
      },
      "encoding": {
        "latitude": { "field": "lat", "type": "quantitative" },
        "longitude": { "field": "lon", "type": "quantitative" },
        "color": {
          "field": "country",
          "type": "nominal",
          "title": "Country",
          "scale": { "scheme": "reds" }
        },
        "size": {
          "field": "score",
          "type": "quantitative",
          "title": "Happiness Index",
          "scale": { "range": [0, 100] }
        }
      }
    }
  ]
}
